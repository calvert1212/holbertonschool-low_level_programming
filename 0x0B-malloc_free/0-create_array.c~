#include <stdio.h>
#include <stdlib.h>
#include "holberton.h"

char *create_array(unsigned int size, char c)
{
	unsigned int count = 0;
	char *arr;
	
	if (size == 0)
		return (NULL);
	else
	{
		arr = (char *)malloc(size * sizeof(char));
		if (arr != NULL)
		{
			while (count <= size)
	{
		arr[count] = c;
	}
		}
	return(arr);
	}
}
